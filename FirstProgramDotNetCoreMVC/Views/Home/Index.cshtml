@{
    ViewData["Title"] = "Home Page";
}

@model ProjectSP.Employee

<form asp-action="Notification" method="post" style="display:inline-block">
    <div asp-validation-summary="All"></div>
    <h2>Information</h2>
    <label>Name</label>
    <p><input type="text" asp-for="Name" /></p>
    <label>Phone</label>
    <p><input type="text" asp-for="Phone" /></p>
    <label>Email</label>
    <p><input type="text" asp-for="Email" /></p>
    <label>Salary</label>
    <p><input type="text" asp-for="Salary" /></p>

    <input type="submit" value="Ok" />
</form>
